<UserControl x:Class="GUI.GroupFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GUI"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Name="group">
        <GroupBox.Header>
            <Button Style="{DynamicResource imageButton}" Click="Button_Click">
                <TextBlock x:Name="header" Padding="5" d:Text="test" />
            </Button>
        </GroupBox.Header>
        <StackPanel x:Name="visibleZone" Orientation="Vertical">

            <StackPanel Name="filters" Orientation="Vertical" />
            <Button x:Name="addFilter" Style="{DynamicResource imageButton}" Click="addFilter_Click">
                <Image Stretch="None" Source="/icons/AddFilter_16x.png" />
            </Button>
        </StackPanel>
    </GroupBox>
</UserControl>